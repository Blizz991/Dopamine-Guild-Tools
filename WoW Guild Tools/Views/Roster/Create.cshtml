@model WoW_Guild_Tools.Models.Raider
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Raider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Race" class="control-label"></label>
                <select class="form-control"
                        asp-for="Race"
                        asp-items="Html.GetEnumSelectList<WowRace>()">
                </select>
                <span asp-validation-for="Race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label"></label>
                <select class="form-control"
                        asp-for="Class"
                        asp-items="Html.GetEnumSelectList<WowClass>()">
                    <option value="0">Select Class</option>
                </select>
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spec" class="control-label"></label>
                <select class="form-control"
                        asp-for="Spec"
                        asp-items="Html.GetEnumSelectList<WowSpec>()">
                    <option value="0">Select Spec</option>
                </select>
                <span asp-validation-for="Spec" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select class="form-control"
                        asp-for="Role"
                        asp-items="Html.GetEnumSelectList<WowSpecRole>()">
                    <option value="0">Select Role</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rank" class="control-label"></label>
                <select class="form-control"
                        asp-for="Rank"
                        asp-items="Html.GetEnumSelectList<WowRaiderRank>()">
                    <option value="0">Select Race</option>
                </select>
                <span asp-validation-for="Rank" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profession1" class="control-label"></label>
                <select class="form-control"
                        asp-for="Profession1"
                        asp-items="Html.GetEnumSelectList<WowProfession>()">
                    <option value="0">Select Profession</option>
                </select>
                <span asp-validation-for="Profession1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Profession2" class="control-label"></label>
                <select class="form-control"
                        asp-for="Profession2"
                        asp-items="Html.GetEnumSelectList<WowProfession>()">
                    <option value="0">Select Profession</option>
                </select>
                <span asp-validation-for="Profession2" class="text-danger"></span>
            </div>
