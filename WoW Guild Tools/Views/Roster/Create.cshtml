                <div class="form-group">
                    <label asp-for="MainId" class="control-label"></label>
                    <input asp-for="Main" class="form-control" />
                </div>
            }*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

