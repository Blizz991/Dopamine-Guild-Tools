@model Raider
@{
    var wowClass = Model.Class.ToString().CreateSlug();
    var wowSpec = Model.Spec.ToString().CreateSlug();
    var dataMainName = Model.IsAlt ? $"data-main-name='{Model.Main.Name}'" : null;
    var title = Model.IsAlt ? $"title='{Model.Main.Name}'" : null;
}
<article data-wow-class="@Html.Raw(wowClass)" data-wow-spec="@Html.Raw(wowSpec)" @Html.Raw(dataMainName) @Html.Raw(title) class="role__raider @Html.Raw(wowClass)-text @Html.Raw(wowClass)-border">
    <span class="raider__name">@Model.Name</span>
    <i class="role__spec-icon wow-icon__@Html.Raw(wowClass)--@Html.Raw(wowSpec)--small"></i>
</article>
